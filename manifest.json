{
  "manifest_version": 3,
  "name": "openQA Navigator",
  "version": "0.1",
  "description": "Filter and navigate openQA jobs",
  "permissions": ["tabs"],
  "host_permissions": [
    "*://*/openqa/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "openQA Navigator",
    "default_icon": "logo.svg"
  },
  "content_scripts": [
    {
      "matches": ["*://*/openqa/*"],
      "js": ["popup.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "next-job": {
      "suggested_key": {
        "default": "Ctrl+Shift+J"
      },
      "description": "Go to next openQA job"
    }
  }
}
